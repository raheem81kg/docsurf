{
   "$schema": "https://turbo.build/schema.json",
   "globalDependencies": ["**/.env"],
   "ui": "tui",
   "tasks": {
      "build": {
         "dependsOn": ["^build"],
         "inputs": ["$TURBO_DEFAULT$", ".env*"],
         "outputs": ["dist/**", ".output/**", "vinxi/**", ".vercel/**", ".tanstack/**"],
         "env": [
            "VITE_CONVEX_URL",
            "VITE_SITE_URL",
            "FRONTEND_URL",
            "VITE_CONVEX_SITE_URL",
            "VITE_DOCSURF_VERSION",
            "VITE_COMPANY_NAME",
            "POSTHOG_HOST",
            "VITE_POSTHOG_KEY",
            "GOOGLE_GENERATIVE_AI_API_KEY",
            "UPSTASH_REDIS_REST_TOKEN",
            "UPSTASH_REDIS_REST_URL",
            "BETTER_AUTH_SECRET",
            "GOOGLE_CLIENT_ID",
            "GOOGLE_CLIENT_SECRET"
         ]
      },
      "lint": {
         "dependsOn": ["^lint"]
      },
      "check-types": {
         "dependsOn": ["^check-types"]
      },
      "dev": {
         "cache": false,
         "persistent": true
      },
      "setup": {
         "cache": false,
         "persistent": true
      }
   },
   "globalEnv": ["GITHUB_TOKEN"]
}
